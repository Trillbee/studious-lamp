<div class="container">

  <body>
      <h1>Merge 2 PDF's from Salesforce</h1>
      <p>Click this button to randomly select two pdfs from salesforce and merge them!</p>
      <a type="button" class="btn btn-lg btn-primary" href="https://shielded-shore-33735.herokuapp.com/sfpdfunite"><span class="glyphicon glyphicon-flash"></span> SF PDF MERGE!</a>


  </body>

  <table class="table table-striped table-bordered">
    <tr>
      <th>Name</th>
      <th>Parent ID</th>
      <th>Content Type</th>
      <th>Created Date</th>
      <th>Salesforce ID</th>
    </tr>

    <% @attachments.each do |attachment| %>
      <tr>
        <td><%= attachment.name %></td>
        <td><%= attachment.parentid %></td>
        <td><%= attachment.contenttype %></td>
        <td><%= attachment.createddate %></td>
        <td><%= attachment.sfid %></td>
      </tr>
    <% end %>
  </table>

</div>
