<div class="container">

  <table class="table table-striped table-bordered">
    <tr>
      <th>Name</th>
      <th>Website</th>
      <th>Created Date</th>
    </tr>

    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.name %></td>
        <td><%= account.website %></td>
        <td><%= account.CreatedDate %></td>
      </tr>
    <% end %>
  </table>

  <table class="table table-striped table-bordered">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
    </tr>

    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.firstname %></td>
        <td><%= contact.lastname %></td>
        <td><%= contact.email %></td>
      </tr>
    <% end %>
  </table>

  <table class="table table-striped table-bordered">
    <tr>
      <th>Name</th>
      <th>ParentId</th>
      <th>ContentType</th>
      <th>Body</th>
    </tr>

    <% @attachments.each do |attachment| %>
      <tr>
        <td><%= attachment.name %></td>
        <td><%= attachment.ParentId %></td>
        <td><%= attachment.ContentType %></td>
        <td><%= attachment.Body %></td>
      </tr>
    <% end %>
  </table>

</div>
