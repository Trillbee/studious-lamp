<div class="container">

  <table class="table table-striped table-bordered">
    <tr>
      <th>Name</th>
      <th>Created Date</th>
      <!-- <th>Description</th> -->
      <th>Phone</th>
    </tr>

    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.name %></td>
        <td><%= account.createddate %></td>
        <!-- <td><%= account.description %></td> -->
        <td><%= account.phone %></td>
      </tr>
    <% end %>
  </table>
</div>

<div class="container">
  <table class="table table-striped table-bordered">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
    </tr>

    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.firstname %></td>
        <td><%= contact.lastname %></td>
        <td><%= contact.email %></td>
      </tr>
    <% end %>
  </table>
</div>

<div class="container">
  <table class="table table-striped table-bordered">
    <tr>
      <th>Name</th>
      <th>ParentId</th>
      <th>ContentType</th>
      <th>Body</th>
      <th>Created Date</th>
      <th>Salesforce ID</th>
    </tr>

    <% @attachments.each do |attachment| %>
      <tr>
        <td><%= attachment.name %></td>
        <td><%= attachment.parentid %></td>
        <td><%= attachment.contenttype %></td>
        <td><%= attachment.body %></td>
        <td><%= attachment.createddate %></td>
        <td><%= attachment.sfid %></td>
      </tr>
    <% end %>
  </table>

</div>
